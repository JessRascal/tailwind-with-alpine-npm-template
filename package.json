{
  "name": "tailwind-with-alpine-npm-template",
  "version": "1.0.0",
  "description": "Starting point for a Tailwindcss and Alpine.js site (using NPM).",
  "main": "index.js",
  "scripts": {
    "dev": "npx concurrently \"npm run tailwind-dev\" \"npm run alpine-dev\"",
    "build": "npm run clean && npm run tailwind-build && npm run alpine-build",
    "alpine": "npx -y esbuild ./src/index.js --outfile=dist/bundle.js --bundle",
    "alpine-build": "npm run alpine -- --minify",
    "alpine-dev": "npm run alpine -- --sourcemap --watch",
    "tailwind": "npx -y tailwindcss -i ./src/input.css -o ./dist/output.css",
    "tailwind-build": "npm run tailwind -- --minify",
    "tailwind-dev": "npm run tailwind -- --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "npx -y rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JessRascal/tailwind-with-alpine-npm-template.git"
  },
  "keywords": [
    "Template",
    "Tailwindcss",
    "Alpine.js",
    "NPM"
  ],
  "author": "JessRascal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JessRascal/tailwind-with-alpine-npm-template/issues"
  },
  "homepage": "https://github.com/JessRascal/tailwind-with-alpine-npm-template#readme",
  "devDependencies": {
    "alpinejs": "^3.10.4",
    "tailwindcss": "^3.2.1"
  }
}
