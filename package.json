{
  "name": "tailwind-with-alpine-npm-template",
  "version": "1.0.0",
  "description": "Starting point for a Tailwindcss and Alpine.js site (using NPM).",
  "main": "index.js",
  "scripts": {
    "start": "npm run tailwind-watch",
    "tailwind-watch": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "alpinejs-dev": "npx esbuild ./src/index.js --outfile=dist/bundle.js --bundle",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JessRascal/tailwind-with-alpine-npm-template.git"
  },
  "keywords": [
    "Template",
    "Tailwindcss",
    "Alpine.js",
    "NPM"
  ],
  "author": "JessRascal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JessRascal/tailwind-with-alpine-npm-template/issues"
  },
  "homepage": "https://github.com/JessRascal/tailwind-with-alpine-npm-template#readme",
  "dependencies": {
    "alpinejs": "^3.8.1"
  },
  "devDependencies": {
    "tailwindcss": "^3.0.15"
  }
}
